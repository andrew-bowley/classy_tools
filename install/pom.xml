<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>au.com.cybersearch2</groupId>
    <artifactId>classy_tools</artifactId>
    <version>1.0.1</version>
  </parent>
  <artifactId>install</artifactId>
  <packaging>pom</packaging>
  <name>Install Artifacts Unavailable Online</name>
  <licenses>
     <license>
       <name>GPLv3</name>
       <url>http://www.gnu.org/licenses/</url>
       <distribution>repo</distribution>
     </license>
  </licenses>
  <scm>
    <url>https://github.com/j256/ormlite-core</url>
    <connection>scm:git:ssh://git@github.com/andrew-bowley/classy-tools.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/andrew-bowley/classy-tools.git</developerConnection>
  </scm>
  <developers>
    <developer>
      <id>andrew-bowley</id>
      <name>Andrew Bowley</name>
      <url>http://cybersearch2.com.au/</url>
      <organization>cybersearch2</organization>
      <organizationUrl>http://cybersearch2.com.au/</organizationUrl>
      <roles>
        <role>architect</role>
        <role>developer</role>
      </roles>
      <timezone>+10</timezone>
    </developer>
  </developers>
  <properties>
    <!-- ANDROID_HOME environment variable -->
    <android.sdk.path>${env.ANDROID_HOME}</android.sdk.path>
    <!-- Android home location for Support Library - can override on command line for alternative to ANDROID_HOME -->
    <android.support.path>${android.sdk.path}</android.support.path>
    <!-- Absolute Android jar location in SDK -->
    <sdk.android.jar.path>${android.sdk.path}/platforms/android-${android.platform.version}/android.jar</sdk.android.jar.path>
    <!-- v4 Support Library jar absolute path -->
    <sdk.compatibility.v4.jar.path>${android.support.path}/extras/android/support/v7/appcompat/libs/android-support-v4.jar</sdk.compatibility.v4.jar.path>
    <!-- Google Maps v18 jar absolute path. Refer Robolectric 2.3 dependencies -->
    <google.maps.18.path>${android.sdk.path}/add-ons/addon-google_apis-google-18/libs/maps.jar</google.maps.18.path>
  </properties>
	<profiles>
	    <profile>
	        <id>java</id>
	        <build>
	            <plugins>
          <plugin>
           <groupId>org.apache.maven.plugins</groupId>
           <artifactId>maven-install-plugin</artifactId>
           <version>2.5.1</version>
           <executions>
              <execution>
                 <id>persistence-api</id>
                 <goals>
                    <goal>install-file</goal>
                 </goals>
                 <phase>initialize</phase>
                 <configuration>
                   <groupId>javax.persistence</groupId>
                   <artifactId>persistence-api</artifactId>
                   <version>2.0</version>
                   <packaging>jar</packaging>
                   <file>${basedir}/persistence-api-2.0.jar</file>
                   <generatePom>true</generatePom>
                 </configuration>
              </execution>
              <execution>
                 <id>openbeans</id>
                 <goals>
                    <goal>install-file</goal>
                 </goals>
                 <phase>initialize</phase>
                 <configuration>
                   <groupId>com.googlecode.openbeans</groupId>
                   <artifactId>openbeans</artifactId>
                   <version>1.0</version>
                   <packaging>jar</packaging>
                   <file>${basedir}/openbeans-1.0.jar</file>
                   <generatePom>true</generatePom>
                 </configuration>
              </execution>
              <execution>
                 <id>ormlite-core</id>
                 <goals>
                    <goal>install-file</goal>
                 </goals>
                 <phase>initialize</phase>
                 <configuration>
                   <packaging>jar</packaging>
                   <file>${basedir}/ormlite-core/ormlite-core.jar</file>
                   <generatePom>false</generatePom>
                   <pomFile>${basedir}/ormlite-core/pom.xml</pomFile>
                 </configuration>
              </execution>
              <execution>
                 <id>ormlite-jdbc</id>
                 <goals>
                    <goal>install-file</goal>
                 </goals>
                 <phase>initialize</phase>
                 <configuration>
                   <packaging>jar</packaging>
                   <file>${basedir}/ormlite-jdbc/ormlite-jdbc.jar</file>
                   <generatePom>false</generatePom>
                   <pomFile>${basedir}/ormlite-jdbc/pom.xml</pomFile>
                 </configuration>
              </execution>
           </executions>
          </plugin>      
	            </plugins>
	        </build>
	    </profile>
	    <profile>
	        <id>android</id>
	        <build>
	            <plugins>
          <plugin>
           <groupId>org.apache.maven.plugins</groupId>
           <artifactId>maven-install-plugin</artifactId>
           <version>2.5.1</version>
           <executions>
              <execution>
                 <id>ormlite-android</id>
                 <goals>
                    <goal>install-file</goal>
                 </goals>
                 <phase>initialize</phase>
                 <configuration>
                   <packaging>jar</packaging>
                   <file>${basedir}/ormlite-android/ormlite-android.jar</file>
                   <generatePom>false</generatePom>
                   <pomFile>${basedir}/ormlite-android/pom.xml</pomFile>
                 </configuration>
              </execution> 
              <execution>
                 <id>robolectric</id>
                 <goals>
                    <goal>install-file</goal>
                 </goals>
                 <phase>initialize</phase>
                 <configuration>
                   <packaging>jar</packaging>
                   <file>${basedir}/robolectric/robolectric-2.4-SNAPSHOT.jar</file>
                   <generatePom>false</generatePom>
                   <pomFile>${basedir}/robolectric/robolectric-2.4-SNAPSHOT.pom</pomFile>
                 </configuration>
              </execution>
              <execution>
                 <id>robolectric</id>
                 <goals>
                    <goal>install-file</goal>
                 </goals>
                 <phase>initialize</phase>
                 <configuration>
                   <packaging>jar</packaging>
                   <file>${basedir}/robolectric/robolectric-annotations-2.4-SNAPSHOT.jar</file>
                   <generatePom>false</generatePom>
                   <pomFile>${basedir}/robolectric/robolectric-annotations-2.4-SNAPSHOT.pom</pomFile>
                 </configuration>
              </execution>
              <execution>
                 <id>robolectric</id>
                 <goals>
                    <goal>install-file</goal>
                 </goals>
                 <phase>initialize</phase>
                 <configuration>
                   <packaging>jar</packaging>
                   <file>${basedir}/robolectric/robolectric-processor-2.4-SNAPSHOT.jar</file>
                   <generatePom>false</generatePom>
                   <pomFile>${basedir}/robolectric/robolectric-processor-2.4-SNAPSHOT.pom</pomFile>
                 </configuration>
              </execution>
              <execution>
                 <id>robolectric</id>
                 <goals>
                    <goal>install-file</goal>
                 </goals>
                 <phase>initialize</phase>
                 <configuration>
                   <packaging>pom</packaging>
                   <file>${basedir}/robolectric/robolectric-parent-2.4-SNAPSHOT.pom</file>
                  </configuration>
              </execution>
              <execution>
                 <id>android</id>
                 <goals>
                    <goal>install-file</goal>
                 </goals>
                 <phase>initialize</phase>
                 <configuration>
                   <packaging>jar</packaging>
                   <file>${sdk.android.jar.path}</file>
                   <generatePom>true</generatePom>
                   <groupId>android</groupId>
                   <artifactId>android</artifactId>
                   <version>${android.sdk.version}</version>
                 </configuration>
              </execution>
              <execution>
                 <id>goggle-maps-18</id>
                 <goals>
                    <goal>install-file</goal>
                 </goals>
                 <phase>initialize</phase>
                 <configuration>
                   <packaging>jar</packaging>
                   <file>${google.maps.18.path}</file>
                   <generatePom>true</generatePom>
                   <groupId>com.google.android.maps</groupId>
                   <artifactId>maps</artifactId>
                   <version>18_r3</version>
                 </configuration>
              </execution>
              <execution>
                 <id>support-v4</id>
                 <goals>
                    <goal>install-file</goal>
                 </goals>
                 <phase>initialize</phase>
                 <configuration>
                   <packaging>jar</packaging>
                   <file>${sdk.compatibility.v4.jar.path}</file>
                   <generatePom>true</generatePom>
                   <groupId>android.support</groupId>
                   <artifactId>compatibility-v4</artifactId>
                   <version>${android.support.version}</version>
                 </configuration>
              </execution>
           </executions>
          </plugin>      
	            </plugins>
	        </build>
	    </profile>
	</profiles>
    <build>
      <plugins>
      </plugins>
      <pluginManagement>
      	<plugins>
      		<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
      		<plugin>
      			<groupId>org.eclipse.m2e</groupId>
      			<artifactId>lifecycle-mapping</artifactId>
      			<version>1.0.0</version>
      			<configuration>
      				<lifecycleMappingMetadata>
      					<pluginExecutions>
      						<pluginExecution>
      							<pluginExecutionFilter>
      								<groupId>
      									org.apache.maven.plugins
      								</groupId>
      								<artifactId>
      									maven-install-plugin
      								</artifactId>
      								<versionRange>
      									[2.5.1,)
      								</versionRange>
      								<goals>
      									<goal>install-file</goal>
      								</goals>
      							</pluginExecutionFilter>
      							<action>
      								<ignore></ignore>
      							</action>
      						</pluginExecution>
      					</pluginExecutions>
      				</lifecycleMappingMetadata>
      			</configuration>
      		</plugin>
      	</plugins>
      </pluginManagement>
    </build>
</project>
